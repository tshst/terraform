# Configure the Docker provider
provider "docker" {
    host = "tcp://153.126.155.210:2375/"
}

# Create a container
resource "docker_container" "foo" {
    image = "${docker_image.centos.latest}"
    name = "foo"
    command = ["python", "-m", "SimpleHTTPServer", "8888"]
    ports = {
            internal = 8888
            external = 8080
            }
}

resource "docker_image" "centos" {
    name = "centos:latest"
}
